{
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.fontSize": 13,
    "search.exclude": {
        "**/node_modules": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": false
    },
    "files.eol": "\n",
    "editor.formatOnPaste": false,
    "[json]": {
        "editor.formatOnSave": false
    }
}